<body>
    <!-- header -->
    <div class="header">
        <div class="container">
            <div class="header-grid">
                <div class="header-grid-left animated wow slideInLeft" data-wow-delay=".5s">
                    <ul>
                        <li><i class="glyphicon glyphicon-log-in" aria-hidden="true"></i><a href="">Hey Admin ... !!</a></li>

                    </ul>
                </div>
            </div>
            <div class="logo-nav">
                <div class="logo-nav-left animated wow zoomIn" data-wow-delay=".5s">
                    <h1><a href="~/My/adm">Buyit <span>Shop anywhere</span></a></h1>
                </div>
            </div>
            <div class="logo-nav-right">
                <div class="search-box">
                    <div id="sb-search" class="sb-search">
                        <form action="/My/searchresult" method="get">
                            <input class="sb-search-input" name="s" placeholder="Enter your search term..." type="search" id="search">
                            <input class="sb-search-submit" type="submit" value="">
                            <span class="sb-icon-search"> </span>
                        </form>
                    </div>
                </div>
                <!-- search-scripts -->
                <script src="~/abc/js/classie.js"></script>
                <script src="~/abc/js/uisearch.js"></script>
                <script>
                    new UISearch(document.getElementById('sb-search'));
                </script>
                <!-- //search-scripts -->
                <div class="clearfix"> </div>
            </div>
        </div>
    </div>
    <style>
        .button {
            background-color: #4CAF50; /* Green */
            border: none;
            color: white;
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
            background-color: #e7e7e7;
            color: black;
        }
    </style>
    <!-- //header -->
    <br><br>
    <div class="new-collections">
        <div class="container">
            @foreach (var s in Model)
            { <div class="col-sm-11 well" style="border: 1px solid #A9A9A9 ; padding:0px; margin:0px; height: 260px;">
                
                <div class="col-sm-3 well" style="height:260px">

                    <a href="@Url.Action("View1", "My", new { title = @s.title })"><img src="~/Uploads/@s.imgname" alt="HTML tutorial" style="text-align: center; padding: 0px; margin:10px 10px 10px 0px; width: 235px ; height:220px"></a>

                </div>

                <a style=" font-size: 32px; " href="@Url.Action("View1", "My", new { title = @s.title })">@s.title</a><br>
                <a style="color: black; font-size: 26px; ">@s.nowprice  Rupees</a>
                
                    
                <div style="text-align:right; padding-right: 10px; ">
                    <p style="text-align:right">posted at : @s.time </p>
                </div>

                posted by : @s.name<br>

                Bidding is on till @s.duration
                  <form action="@Url.Action("del", "My", new { title = @s.title })" method="post">
                      <div style="text-align:right; padding-right: 25px; ">
                          <button class="button">Delete</button>
                      </div>
                  </form>
                Location :@s.location
                  
            </div>
            }
        </div>
    </div>




    <br /><br><br>
    <!-- footer -->
    <div class="footer">
        <div class="container">

            <div class="footer-logo animated wow slideInUp" data-wow-delay=".5s">
                <h2><a href="~/My/adm">Best Store <span>shop anywhere</span></a></h2>
            </div>

        </div>
    </div>
    <!-- //footer -->
</body>
